#!/usr/bin/env php
<?php
/**
 * Goggles : search for composer packages from the terminal
 * @author  Filipe Dobreira <http://github.com/filp>
 * @package filp/goggles
 */
require __DIR__ . '/../vendor/autoload.php';

use Goggles\Application;
use Goggles\Command\FindCommand;
use Goggles\Command\ShowCommand;

$app = new Application;

// Register commands:
$app->addCommands(array(
    new FindCommand,
    new ShowCommand
));

// Set locations to be searched for a .goggles file:
$searchPaths = array('.');
if(isset($_SERVER['HOME'])) {
    array_unshift($searchPaths, $_SERVER['HOME']);
}
$app->setConfigSearchPaths($searchPaths);

$app->run();
